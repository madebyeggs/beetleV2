<div class="col-md-12 worksTable">
	<div class="col-md-3">&nbsp;</div>
	<div class="col-md-6">
		<h1>Works Table</h1>
		<table class="table table-bordered table-striped" id="sortableWork">
			<thead>
		    	<tr>
		      		<th>ID</th>
		      		<th>Client</th>
					<th>Title</th>
		      		<th></th>
					<th></th>
				</tr>
		  	</thead>
		  	<tbody>
		    	<% @works.each do |work| %>
		      		<tr data-item-id=<%= "#{work.id}" %> class="item">
		        		<td width="10"><%= work.id %></td>
						<td width="35%"><%= work.client %></td>
						<td width="35%"><%= work.title %></td>
						<td width="10%"><%= link_to "Edit", edit_work_path(work) %></td>
						<td width="10%"><%= link_to 'Delete', work, method: :delete, data: {confirm: "Are you sure you want to delete this record?"} %></td>

		      		</tr>
		    	<% end %>
		  	</tbody>
		</table>
	</div>
	<div class="col-md-3">&nbsp;</div>
</div>